{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",

  "ModelTrainer": {
    "HondaClassificationModelTrainingSettings": {
      "TrainingInputBaseFolder": "/app/Scripts/Input",
      "ModelTrainingPythonScript": "honda_prediction.py",
      "ModelTrainingPythonScriptDir": "/app/Scripts",
      "ModelTrainingPythonRequirementFile": "requirements.txt",
      "ModelOuputBaseFolder": "/app/trained_models",
      "TrainingDataFolderBaseName": "training_data",
      "TrainingDataFileName": "all_train",
      "SydromesFileBaseName": "AllSyndrome"
    }
  },

  "HondaDataAccess": {
    "HondaMongoDbSettings": {
      "ConnectionString": "mongodb://mongodb:27017",
      "Database": "HondaDevelopment"
    },
    "MariaRawDataDbSettings": {
      "ConnectionString": "Server=mariadb;Port=33306;User ID=root;Password=123456;Database=HondaRawData;ConnectionIdleTimeout=0"
    },
    "MongoRawDataDbSettings": {
      "ConnectionString": "mongodb://mongodb:27017",
      "Database": "HondaDevelopment",
      "GOVDataSettings": {
        "TableName": "RawGOVData",
        "TimestampFieldName": "Timestamp"
      },
      "MediaMainDataSettings": {
        "TableName": "RawMediaMainData",
        "TimestampFieldName": "Timestamp"
      },
      "MediaSubDataSettings": {
        "TableName": "RawMediaSubData",
        "TimestampFieldName": "Timestamp"
      }
    }
  },

  "Scheduler": {
    "SchedulerSettings": {
      "Name": "ModelTrainer",
      "RefreshSleepIntervalInSeconds": 30,
      "SupportedJobs": [ "Model-Trainer" ]
    },
    "Quartz": {
      "quartz.threadPool.threadPriority": "Normal",
      "quartz.threadPool.threadCount": 10
    },
    "SchedulerDBSettings": {
      "ConnectionString": "mongodb://mongodb:27017",
      "Database": "HondaDevelopment",
      "LockerCollectionName": "SchedulerLockers",
      "JobDefineCollectionName": "ScheduledJobs",
      "JobTaskCollectionName": "ScheduledJobTasks"
    },
    "LockSettings": {
      "LivnessProbePeriodSeconds": 30,
      "LivnessFailureThreshold": 3
    },
    "JobSettings": {
      "MaxWorker": 1,
      "TaskMaxTryTimes": 3
    },
    "JobTaskSettings": {
      "ActionRetryTimes": 3
    },
    "TaskHistorySettings": {
      "HistoriesToKeep": 30
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "Application": "ModelTrainer"
    }
  }
}